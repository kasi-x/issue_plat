{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["src/lib/*"]
    },
    "noEmit": true
  },
  "include": ["src", "functions", "tests", "wrangler.toml"],
  "exclude": ["node_modules", "dist"]
}
